<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notes Management System</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>üìù Notes Management System</h1>
            <p>Organize your thoughts, ideas, and tasks efficiently</p>
        </header>

        <!-- Search Bar -->
        <div class="search-container">
            <form action="/" method="get">
                <input type="text" class="search-bar" name="search" placeholder="Search notes..." value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>">
                <button type="submit" class="search-btn">Search</button>
            </form>
        </div>

        <!-- Add Note Form -->
        <div class="form-container">
            <h2>Add New Note</h2>
            <form action="/add" method="post">
                <div class="form-group">
                    <label for="noteTitle">Note Title</label>
                    <input type="text" class="form-control" id="noteTitle" name="noteTitle" placeholder="Enter note title" required>
                </div>
                <div class="form-group">
                    <label for="noteContent">Note Content</label>
                    <textarea class="form-control" id="noteContent" name="noteContent" placeholder="Enter note content" rows="4" required></textarea>
                </div>
                <div class="form-group">
                    <label for="noteCategory">Category</label>
                    <select class="form-control" id="noteCategory" name="noteCategory" required>
                        <option value="">Select a category</option>
                        <option value="Work">Work</option>
                        <option value="Personal">Personal</option>
                        <option value="Ideas">Ideas</option>
                        <option value="Todo">To-Do</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Add Note</button>
            </form>
        </div>

        <!-- Display Notes -->
        <h2 class="mt-20">All Notes <%= typeof searchTerm !== 'undefined' && searchTerm ? '(Search Results for "' + searchTerm + '")' : '' %></h2>
        
        <% if (data.length === 0) { %>
            <div class="text-center mt-20">
                <p>No notes found. Create your first note above!</p>
            </div>
        <% } else { %>
            <div class="notes-grid">
                <% data.forEach(note => { %>
                    <div class="note-card <%= note.noteStatus === 'Archived' ? 'archived' : '' %> <%= note.isPinned ? 'pinned' : '' %>">
                        <% if (note.isPinned) { %>
                            <span class="pinned-indicator">PINNED</span>
                        <% } %>
                        <h3 class="note-title"><%= note.noteTitle %></h3>
                        <p class="note-content"><%= note.noteContent %></p>
                        <div class="note-meta">
                            <span class="note-category category-<%= note.noteCategory.toLowerCase() %>"><%= note.noteCategory %></span>
                            <span><%= note.noteStatus %></span>
                        </div>
                        <div class="note-meta">
                            <small>Created: <%= new Date(note.createdAt).toLocaleDateString() %></small>
                            <small>Updated: <%= new Date(note.updatedAt).toLocaleDateString() %></small>
                        </div>
                        <div class="note-actions">
                            <div class="action-buttons">
                                <a href="/edit/<%= note.noteTitle %>" class="btn btn-secondary btn-sm" style="flex: 1;">Edit</a>
                                
                                <% if (note.noteStatus === "Active") { %>
                                    <form action="/archive" method="post" style="display: inline; flex: 1;">
                                        <input type="hidden" name="noteTitle" value="<%= note.noteTitle %>">
                                        <button type="submit" class="btn btn-warning btn-sm" style="width: 100%;">Archive</button>
                                    </form>
                                <% } else { %>
                                    <form action="/unarchive" method="post" style="display: inline; flex: 1;">
                                        <input type="hidden" name="noteTitle" value="<%= note.noteTitle %>">
                                        <button type="submit" class="btn btn-success btn-sm" style="width: 100%;">Unarchive</button>
                                    </form>
                                <% } %>
                                
                                <form action="/pin" method="post" style="display: inline; flex: 1;">
                                    <input type="hidden" name="noteTitle" value="<%= note.noteTitle %>">
                                    <button type="submit" class="btn <%= note.isPinned ? 'btn-secondary' : 'btn-warning' %> btn-sm" style="width: 100%;">
                                        <%= note.isPinned ? 'Unpin' : 'Pin' %>
                                    </button>
                                </form>
                                
                                <form action="/delete" method="post" style="display: inline; flex: 1;">
                                    <input type="hidden" name="noteTitle" value="<%= note.noteTitle %>">
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this note?')" style="width: 100%;">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>
</body>
</html>